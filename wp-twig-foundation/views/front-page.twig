                </section>
                <!-- End Widget 1 ->

                <!-- Widget 2 -->
                <section class="large-4 medium-6 small-12 columns">
                    {{ homeTwo }}
                </section>
                <!-- End Widget 2 -->
    </section>
    <!-- End Widgets -->
{% endblock %}